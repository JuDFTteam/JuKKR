# rules expressing dependencies on Fortran files

##################### sources in SRA directory ##########
$(OBJ)/bofm.o         : $(SRA)/bofm.f                     ; \
                       $(FC) $(FFLAGS)  $(SRA)/bofm.f -c -o $@

$(OBJ)/btom.o         : $(SRA)/btom.f                     ; \
                       $(FC) $(FFLAGS)  $(SRA)/btom.f -c -o $@

